<%# $Id: _redmine_hudson_settings.erb 445 2010-02-10 17:52:07Z toshiyuki.ando1971 $ %>
<p>
  <%= content_tag(:label, l(:label_autofetch)) %>
  <%= check_box_tag 'settings[autofetch]', true, @settings['autofetch'] %><br>
  <%=l(:notice_autofetch)%>
</p>
<p>
  <%= content_tag(:label, l(:label_job_description_format)) %>
  <%= radio_button_tag 'settings[job_description_format]', "hudson", @settings['job_description_format'] == "hudson" %> Hudson(html)<br>
  <%= radio_button_tag 'settings[job_description_format]', "textile", @settings['job_description_format'] == "textile" %> Textile
</p>
<p>
  <%= content_tag(:label, l(:label_query_limit_builds_each_job)) %>
  <%= text_field_tag 'settings[query_limit_builds_each_job]', @settings['query_limit_builds_each_job'], :size => 5 %>
</p>
<p>
  <%= content_tag(:label, l(:label_query_limit_changesets_each_job)) %>
  <%= text_field_tag 'settings[query_limit_changesets_each_job]', @settings['query_limit_changesets_each_job'], :size => 5 %>
</p>
